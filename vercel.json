{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/email/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/health",
      "dest": "server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "continue": true,
      "has": [
        {
          "type": "header",
          "key": "accept",
          "value": "text/html"
        }
      ],
      "dest": "https://barangay-bonbon.vercel.app"
    },
    {
      "src": "/(.*)",
      "status": 200,
      "headers": {
        "content-type": "application/json"
      },
      "dest": "/api/health"
    }
  ]
}
